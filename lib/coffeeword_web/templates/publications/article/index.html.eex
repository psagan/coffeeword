<h2>Listing Articles</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Views</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for article <- @articles do %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= article.views %></td>

      <td class="text-right">
        <span><%= link "Show", to: publications_article_path(@conn, :show, article), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: publications_article_path(@conn, :edit, article), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: publications_article_path(@conn, :delete, article), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Article", to: publications_article_path(@conn, :new) %></span>
